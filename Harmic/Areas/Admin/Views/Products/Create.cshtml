                            </label>
                        </div>
                        <div class="form-group form-check">
                            <label class="form-check-label">
                                <input class="form-check-input" asp-for="IsBestSeller" /> @Html.DisplayNameFor(model => model.IsBestSeller)
                            </label>
                        </div>
                        <div class="form-group">
                            <label asp-for="UnitInStock" class="control-label"></label>
                            <input asp-for="UnitInStock" class="form-control" />
                            <span asp-validation-for="UnitInStock" class="text-danger"></span>
                        </div>
                        <div class="form-group form-check">
                            <label class="form-check-label">
                                <input class="form-check-input" asp-for="IsActive" /> @Html.DisplayNameFor(model => model.IsActive)
                            </label>
                        </div>
                        <div class="form-group">
                            <label asp-for="Star" class="control-label"></label>
                            <input asp-for="Star" class="form-control" />
                            <span asp-validation-for="Star" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <input type="submit" value="Create" class="btn btn-primary" />
                        </div>*@
                            <div class="card-footer">
                                <input type="submit" value="Thêm mới" class="btn btn-primary" />
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </section>
</div>


