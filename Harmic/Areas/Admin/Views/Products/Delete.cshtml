@model Harmic.Models.TbProduct

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="content-wrapper">
    <section class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6">
                    <h1>Xoá sản phẩm</h1>
                </div>
                <div class="col-sm-6">
                    <ol class="breadcrumb float-sm-right">
                        <li class="breadcrumb-item"><a href="#">Home</a></li>
                        <li class="breadcrumb-item active">Xóa sản phẩm</li>
                    </ol>
                </div>
            </div>
        </div>
    </section>

    <section class="content">
        <div class="container-fluid">
            <div class="row">
                <div class="col-md-12">
                    <div class="card card-primary">
                        <div class="card-header bg-danger">
                            <h3 class="card-title">Xác nhận xóa sản phẩm</h3>
                        </div>
                        <div class="card-body">
                            <div class="form-group">
                                <label>Tiêu đề:</label>
                                <p>@Model?.Title ?? "Không có dữ liệu"</p>
                            </div>

                            <div class="form-group">
                                <label>Danh mục:</label>
                                <p>@(Model?.CategoryProduct?.Title ?? "Chưa có danh mục")</p>
                            </div>

                            <div class="form-group">
                                <label>Ảnh:</label><br />
                                @if (!string.IsNullOrEmpty(Model?.Image))
                                {
                                    <img src="@Url.Content(Model.Image.Replace("\\", "/"))" width="100" />
                                }
                                else
                                {
                                    <span>Không có ảnh</span>
                                }
                            </div>

                            <div class="form-group">
                                <label>Giá:</label>
                                <p>@Model?.Price</p>
                            </div>

                            <div class="form-group">
                                <label>Giá giảm:</label>
                                <p>@Model?.PriceSale</p>
                            </div>

                            <div class="form-group">
                                <label>Số lượng:</label>
                                <p>@Model?.Quantity</p>
                            </div>

                            <div class="form-group">
                                <label>Sản phẩm mới:</label>
                                <p>@Model?.IsNew</p>
                            </div>

                            <div class="form-group">
                                <label>Bán chạy:</label>
                                <p>@Model?.IsBestSeller</p>
                            </div>

                            <div class="form-group">
                                <label>Số sao:</label>
                                <p>@Model?.Star</p>
                            </div>

                            <div class="form-group">
                                <label>Hiển thị:</label>
                                <p>@Model?.IsActive</p>
                            </div>
                        </div>

                        <div class="card-footer">
                            <form asp-action="Delete">
                                <input type="hidden" asp-for="ProductId" />
                                <input type="submit" value="Xoá" class="btn btn-danger" />
                                <a asp-action="Index" class="btn btn-secondary">Quay lại</a>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
</div>
