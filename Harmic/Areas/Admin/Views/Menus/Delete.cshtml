@model Harmic.Models.TbMenu

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="content-wrapper">
    <section class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6">
                    <h1>Xoá menu</h1>
                </div>
                <div class="col-sm-6">
                    <ol class="breadcrumb float-sm-right">
                        <li class="breadcrumb-item"><a href="#">Home</a></li>
                        <li class="breadcrumb-item active">General Form</li>
                    </ol>
                </div>
            </div>
        </div>
    </section>

    <section class="content">
        <div class="container-fluid">
            <div class="row">
                <div class="col-md-12">
                    <div class="card card-primary">
                        <div class="card-header">
                            <h3 class="card-title">Xoá menu</h3>
                        </div>
                        <div class="card-body">
                            <div class="form-group">
                                <label>Tiêu đề:</label>
                                @Html.DisplayFor(model => model.Title)
                            </div>
                            <div class="form-group">
                                <label>Alias:</label>
                                @Html.DisplayFor(model => model.Alias)
                            </div>
                            <div class="form-group">
                                <label>Mô tả:</label>
                                @Html.DisplayFor(model => model.Description)
                            </div>
                            <div class="form-group">
                                <label>Mức:</label>
                                @Html.DisplayFor(model => model.Levels)
                            </div>
                            <div class="form-group">
                                <label>Menu cha:</label>
                                @Html.DisplayFor(model => model.ParentId)
                            </div>
                            <div class="form-group">
                                <label>Vị trí:</label>
                                @Html.DisplayFor(model => model.Position)
                            </div>
                            <div class="form-group">
                                <label>Hiện:</label>
                                @Html.DisplayFor(model => model.IsActive)
                            </div>
                        </div>
                        <div class="card-footer">
                            <form asp-action="Delete">
                                <input type="hidden" asp-for="MenuId" /> <input type="submit" value="Xoá" class="btn btn-danger" />
                                <a asp-action="Index" class="btn btn-primary">Quay lại</a>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
</div>