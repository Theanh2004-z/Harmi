@model Harmic.Models.TbBlog

@{
    ViewBag.Title = "Blog";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<main class="main-content">
    <div class="breadcrumb-area breadcrumb-height" data-bg-image="~/assets/images/breadcrumb/bg/1-1-1920x373.jpg">
        <div class="container h-100">
            <div class="row h-100">
                <div class="col-lg-12">
                    <div class="breadcrumb-item">
                        <h2 class="breadcrumb-heading">Blog Layout</h2>
                        <ul>
                            <li>
                                <a href="/">Home <i class="pe-7s-angle-right"></i></a>
                            </li>
                            <li>Blog Default</li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="blog-area blog-column-2 section-space-y-axis-100">
        <div class="container">
            <div class="row">
                <div class="col-md-6">
                    <div class="blog-item">
                        <div class="blog-img img-zoom-effect">
                            <a href="/Blog/Details/1">
                                <img class="img-full" src="~/assets/images/blog/medium-size/2-1-570x485.jpg" alt="Blog Image">
                            </a>
                        </div>
                        <div class="blog-content">
                            <div class="blog-meta text-dim-gray pb-3">
                                <ul>
                                    <li class="date"><i class="fa fa-calendar-o me-2"></i>May 21, 2021</li>
                                    <li>
                                        <span class="comments me-3"><a href="#">2 Comments</a></span>
                                        <span class="link-share"><a href="#">Share</a></span>
                                    </li>
                                </ul>
                            </div>
                            <h5 class="title mb-4">
                                <a href="/Blog/Details/1">Blog Image Post</a>
                            </h5>
                            <p class="short-desc mb-5">Lorem ipsum dolor sit amet, consectet adipi elit, sed do eius tempor incididunt ut labore et dolore magna aliqua.</p>
                            <div class="button-wrap">
                                <a class="btn btn-custom-size lg-size btn-dark rounded-0" href="/Blog/Details/1">Read More</a>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Bạn có thể copy các cột blog khác từ template tương tự -->
            </div>
        </div>
    </div>
</main>


