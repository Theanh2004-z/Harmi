@model Harmic.Models.TbProduct
@{
    ViewData["Title"] = Model.Title;
    Layout = "~/Views/Shared/_Layout.cshtml";

    var productReview = ViewBag.productReview as List<Harmic.Models.TbProductReview> ?? new List<Harmic.Models.TbProductReview>();
    var productRelated = ViewBag.productRelated as List<Harmic.Models.TbProduct> ?? new List<Harmic.Models.TbProduct>();

    var defaultImagePath = "/assets/images/product/default.jpg";
    var productImagePath = !string.IsNullOrEmpty(Model.Image) ? Url.Content("~/" + Model.Image) : defaultImagePath;
}

<main class="main-content">

    <div class="breadcrumb-area breadcrumb-height" data-bg-image="@Url.Content("~/assets/images/breadcrumb/bg/1-1-1920x373.jpg")">
        <div class="container h-100">
            <div class="row h-100">
                <div class="col-lg-12">
                    <div class="breadcrumb-item">
                        <h2 class="breadcrumb-heading">@Model.Title</h2>
                        <ul>
                            <li>
                                <a href="/">Home <i class="pe-7s-angle-right"></i></a>
                            </li>
                            <li>@Model.Title</li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="single-product-area section-space-top-100">
        <div class="container">
            <div class="row">
                <div class="col-lg-6">
                    <div class="product-thumb-with-content row">
                        <div class="col-12 order-lg-1 order-2 pt-10 pt-lg-0">
                            <div class="swiper-container single-product-slider">
                                <div class="swiper-wrapper">
                                    <div class="swiper-slide">
                                        <a href="@productImagePath" class="single-img gallery-popup">
                                            <img class="img-full" src="@productImagePath" alt="@Model.Title">
                                        </a>
                                    </div>
                                </div>
                                <div class="swiper-pagination"></div>
                            </div>
                        </div>

                        <div class="col-12 order-lg-2 order-1 pt-10 pt-lg-0">
                            <div class="row single-product-thumbs">
                                <div class="col-3">
                                    <a href="javascript:void(0)" class="active">
                                        <img class="img-full" src="@productImagePath" alt="@Model.Title">
                                    </a>
                                </div>
                                <div class="col-3">
                                    <a href="javascript:void(0)">
                                        <img class="img-full" src="@productImagePath" alt="@Model.Title">
                                    </a>
                                </div>
                                <div class="col-3">
                                    <a href="javascript:void(0)">
                                        <img class="img-full" src="@productImagePath" alt="@Model.Title">
                                    </a>
                                </div>
                                <div class="col-3">
                                    <a href="javascript:void(0)">
                                        <img class="img-full" src="@productImagePath" alt="@Model.Title">
                                    </a>
                                </div>
                            </div>
                        </div>

                    </div>
                </div>

                <div class="col-lg-6">
                    <div class="single-product-content">
                        <h2 class="title">@Model.Title</h2>
                        <div class="price-box pb-1">
                            @if (Model.PriceSale == null || Model.PriceSale == 0)
                            {
                                <span class="new-price text-danger">@((Model.Price ?? 0).ToString("$#,##0.00"))</span>
                            }
                            else
                            {
                                <span class="new-price text-danger">@((Model.PriceSale ?? 0).ToString("$#,##0.00"))</span>
                                <span class="old-price text-primary">@((Model.Price ?? 0).ToString("$#,##0.00"))</span>
                            }
                        </div>
                        <div class="rating-box-wrap pb-7">
                            <div class="rating-box">
                                <ul>
                                    @for (var i = 0; i < (Model.Star ?? 0); i++)
                                    {
                                        <li><i class="pe-7s-star"></i></li>
                                    }
                                </ul>
                            </div>
                            <div class="review-status ps-4">
                                <a href="#reviews">( @productReview.Count() Customer Review )</a>
                            </div>
                        </div>
                        <p class="short-desc mb-6">@Model.Description</p>
                        <ul class="quantity-with-btn pb-7">
                            <li class="quantity">
                                <div class="cart-plus-minus">
                                    <input class="cart-plus-minus-box" value="1" type="text">
                                </div>
                            </li>
                            <li class="add-to-cart">
                                <a class="btn btn-custom-size lg-size btn-primary btn-secondary-hover rounded-0" href="cart.html">Add to cart</a>
                            </li>
                            <li class="wishlist-btn-wrap">
                                <a class="btn rounded-0" href="wishlist.html">
                                    <i class="pe-7s-like"></i>
                                </a>
                            </li>
                        </ul>
                        <div class="product-category text-matterhorn pb-2">
                            <span class="title">Categories :</span>
                            <ul>
                                <li>
                                    <a href="/@(Model.CategoryProduct?.Alias)">@(Model.CategoryProduct?.Description ?? "Không thể mang đi nhậu")</a>
                                </li>
                            </ul>
                        </div>
                        <div class="social-link align-items-center pb-lg-8">
                            <span class="title">Share:</span>
                            <ul>
                                <li><a href="javascript:void(0)"><i class="fa fa-pinterest-p"></i></a></li>
                                <li><a href="javascript:void(0)"><i class="fa fa-twitter"></i></a></li>
                                <li><a href="javascript:void(0)"><i class="fa fa-tumblr"></i></a></li>
                                <li><a href="javascript:void(0)"><i class="fa fa-dribbble"></i></a></li>
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="product-tab-area section-space-top-100">
        <div class="container">
            <div class="row">
                <div class="col-lg-12">
                    <ul class="nav product-tab-nav product-tab-style-2" role="tablist">
                        <li class="nav-item" role="presentation">
                            <a class="active btn btn-custom-size" id="description-tab" data-bs-toggle="tab" href="#description" role="tab" aria-controls="description" aria-selected="true">
                                Description
                            </a>
                        </li>
                        <li class="nav-item" role="presentation">
                            <a class="btn btn-custom-size" id="reviews-tab" data-bs-toggle="tab" href="#reviews" role="tab" aria-controls="reviews" aria-selected="false">
                                Reviews
                            </a>
                        </li>
                        <li class="nav-item" role="presentation">
                            <a class="btn btn-custom-size" id="shipping-tab" data-bs-toggle="tab" href="#shipping" role="tab" aria-controls="shipping" aria-selected="false">
                                Shipping
                            </a>
                        </li>
                    </ul>
                    <div class="tab-content product-tab-content">
                        <div class="tab-pane fade show active" id="description" role="tabpanel" aria-labelledby="description-tab">
                            <div class="product-description-body">
                                <p class="short-desc mb-0">@Html.Raw(Model.Detail)</p>
                            </div>
                        </div>
                        <div class="tab-pane fade" id="reviews" role="tabpanel" aria-labelledby="reviews-tab">
                            <div class="product-review-body">
                                <h4 class="heading mb-5">@productReview.Count() Review Items</h4>
                                @if (productReview != null && productReview.Any())
                                {
                                    foreach (var item in productReview)
                                    {
                                        <ul class="user-info-wrap">
                                            <li>
                                                <ul class="user-info">
                                                    <li class="user-avatar">
                                                        <img src="@Url.Content("~/assets/images/testimonial/user/1.png")" alt="User Image">
                                                    </li>
                                                    <li class="user-comment">
                                                        <div class="rating-box">
                                                            <ul>
                                                                @for (var i = 0; i < (item.Star ?? 0); i++)
                                                                {
                                                                    <li><i class="pe-7s-star"></i></li>
                                                                }
                                                            </ul>
                                                        </div>
                                                        <div class="meta">
                                                            <span><strong>@item.Name</strong> - @(item.CreatedDate.HasValue? item.CreatedDate.Value.ToString("dd/MM/yyyy") : "")</span>
                                                        </div>
                                                        <p class="short-desc mb-0">@item.Detail</p>
                                                    </li>
                                                </ul>
                                            </li>
                                        </ul>
                                    }
                                }
                                else
                                {
                                    <p>Chưa có đánh giá nào cho sản phẩm này.</p>
                                }
                            </div>
                        </div>
                        <div class="tab-pane fade" id="shipping" role="tabpanel" aria-labelledby="shipping-tab">
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="product-slider-area section-space-top-95 section-space-bottom-100">
        <div class="container">
            <div class="section-title text-center pb-55">
                <span class="sub-title text-primary">You Can Be Love It</span>
                <h2 class="title mb-0">Related Products</h2>
            </div>
            <div class="row">
                <div class="col-lg-12">
                    <div class="swiper-slider-holder swiper-arrow">
                        <div class="swiper-container product-slider border-issue">
                            <div class="swiper-wrapper">
                                @if (productRelated != null && productRelated.Any())
                                {
                                    foreach (var item in productRelated)
                                    {
                                        // Tạo link động cho từng sản phẩm
                                        string sUrl = $"/product/{item.Alias}-{item.ProductId}.html";

                                        <div class="swiper-slide">
                                            <div class="product-item">
                                                <div class="product-img img-zoom-effect">
                                                    <a href="@sUrl">
                                                        <img class="img-full" src="@(!string.IsNullOrEmpty(item.Image) ? Url.Content("~/" + item.Image) : defaultImagePath)" alt="@item.Title">
                                                    </a>
                                                </div>
                                                <div class="product-content">
                                                    <a class="product-name" href="@sUrl">@item.Title</a>
                                                    <div class="price-box pb-1">
                                                        @if (item.PriceSale == null || item.PriceSale == 0)
                                                        {
                                                            <span class="new-price">@((item.Price ?? 0).ToString("$#,##0.00"))</span>
                                                        }
                                                        else
                                                        {
                                                            <span class="new-price">@((item.PriceSale ?? 0).ToString("$#,##0.00"))</span>
                                                        }
                                                    </div>
                                                    <div class="rating-box">
                                                        <ul>
                                                            @for (var i = 0; i < (item.Star ?? 0); i++)
                                                            {
                                                                <li><i class="pe-7s-star"></i></li>
                                                            }
                                                        </ul>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    }
                                }
                            </div>
                        </div>
                        <div class="swiper-button-next"></div>
                        <div class="swiper-button-prev"></div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</main>